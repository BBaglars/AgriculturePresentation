@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
                @Html.HiddenFor(x=>x.ServiceID)
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel" asp-for="Image">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" placeholder="Açıklama" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Değişiklikleri Kaydet</button>
            </form>
        </div>
    </div>
</div>
