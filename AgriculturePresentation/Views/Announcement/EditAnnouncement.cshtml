@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">YDuyuru Güncelleme Sayfası</h4>
                @Html.HiddenFor(x => x.AnnouncementID)
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" placeholder="Başlık Giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" class="form-control" placeholder="Tarih Giriniz" asp-for="Date">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea cols="30" rows="5" class="form-control" asp-for="Description" placeholder="Açıklama Giriniz"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>