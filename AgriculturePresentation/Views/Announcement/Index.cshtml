@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Tarih</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                        <th>Durum</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.AnnouncementID</td>
                        <td>@item.Title</td>
                        <td>@item.Date</td>
                        <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Announcement/EditAnnouncement/@item.AnnouncementID" class="btn btn-outline-primary">Düzenle</a></td>
                        <td>
                            @if (@item.Status)
                            {
                                 <a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementID" class="btn btn-outline-success">Aktif</a>
                            }
                            else
                            {
                                <a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementID" class="btn btn-outline-warning">Pasif</a>
                            }
                        </td>
                    </tr>
                    }
                    </tbody>
                </table>
            </div>
            <br/>
            <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-success">Yeni Duyuru Girişi</a>
        </div>
    </div>
</div>
