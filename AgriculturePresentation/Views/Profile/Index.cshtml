@model AgriculturePresentation.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Mail Adresi</label>
                    <input type="text" class="form-control" placeholder="Mail adresinizi giriniz" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label>Telefon Numarası</label>
                    <input type="text" class="form-control" placeholder="Telefon numaranızı giriniz" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="text" class="form-control" placeholder="Yeni şifrenizi giriniz" asp-for="Password">
                </div>
                <div class="form-group">
                    <label>Şifre Tekrarı</label>
                    <input type="text" class="form-control" placeholder="Yeni şifrenizi tekrar Giriniz" asp-for="PasswordConfirm">
                </div>
                <button type="submit" class="btn btn-outline-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>
